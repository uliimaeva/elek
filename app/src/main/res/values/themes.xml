<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elek" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary_text</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primary_dark</item>
        <item name="android:textColorHint">@color/primary_dark</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="MyCounterText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>